@model LightNovel
@{
    ViewData["Title"] = "Create Light Novel";
    Layout = "_Layout";
}

<section class="product spad">
    <div class="container">
        <h2>Create Light Novel</h2>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label>Title</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label>Episodes</label>
                <input asp-for="Episodes" class="form-control" type="number" />
            </div>
            <div class="form-group">
                <label>Cost</label>
                <input asp-for="Cost" class="form-control" type="number" />
            </div>
            <div class="form-group">
                <label>Genre</label>
                <select asp-for="GenreId" class="form-control">
                    @foreach (var genre in ViewBag.Genres)
                    {
                        <option value="@genre.Id">@genre.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Image URL</label>
                <input asp-for="ImgUrl" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</section>