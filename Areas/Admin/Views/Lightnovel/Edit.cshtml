@model LightNovel
@{
    ViewData["Title"] = "Edit Light Novel";
    Layout = "_Layout";
}

<section class="product spad">
    <div class="container">
        <h2>Edit Light Novel</h2>
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label>Title</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label>Episodes</label>
                <input asp-for="Episodes" class="form-control" type="number" />
            </div>
            <div class="form-group">
                <label>Cost</label>
                <input asp-for="Cost" class="form-control" type="number" />
            </div>
            <div class="form-group">
                <label>Genre</label>
                <select asp-for="GenreId" class="form-control">
                    @foreach (var genre in ViewBag.Genres)
                    {
                        <option value="@genre.Id" selected="@(genre.Id == Model.GenreId)">@genre.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Image URL</label>
                <input asp-for="ImgUrl" class="form-control" />
            </div>
            <div class="form-group">
                <label>Link</label>
                <input asp-for="Link" class="form-control" />
            </div>
            <div class="form-group">
                <label>Ranked</label>
                <input asp-for="Ranked" class="form-control" type="number" />
            </div>
            <div class="form-group">
                <label>Read Count</label>
                <input asp-for="Read" class="form-control" type="number" />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</section>